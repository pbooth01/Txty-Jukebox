{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

         <!--row-->
   <div class="row">
       <div class="col-md-6 col-md-offset-3">
       
          <div class="shadow-container login-form">
        			   
			   <h1>Login</h1>
 			                 	
				{% if error %}
				    <div class ="alert alert-danger login-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %} 			                 	
 			                 			   
                <form accept-charset="UTF-8" action="{{ path("fos_user_security_check") }}" role="form" method="post">
                      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                
                    <div class ="form-group">
                      <label for="username">{{ 'security.login.username'|trans }}</label>
                      <input class="form-control "type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                
                    <div class ="form-group">
                      <label for="password">{{ 'security.login.password'|trans }}</label>
                      <input class="form-control"type="password" id="password" name="_password" required="required" />
                    </div>
                    
                    <div class ="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    
                    <div class ="form-group">
                      <input class ="btn btn-default btn-lg" type="submit" id="_submit" name="_submit" value="{{'security.login.submit'|trans }}" />
                    </div>                                      
                </form>
                               
         </div> 
     </div>             
</div>
      		<!-- /row -->        
{% endblock fos_user_content %}